    function checkAction(form){

        var si = getGridSelectedData();
        if (form == 'w2'){

            if (si == null)
            {
                 $("#w2Add").hide();
                 $("#w2Edit").hide();
                 $("#w2View").hide();
                 $("#w2Print").hide();
                 app.ShowErrorMessage("Kindly select a row to open to Add/Edit W2 Form");
                 return;
            }
            var id = GetFormIDByName("w2");
            var w1status = GetFormIDByName("w1Status");
            var w2substatus = GetFormIDByName("w2SubStatus");
            if ((id == "-1" || id == null) &&   (w1status == "Verified"))
            {
                $("#w2Add").show();
                $("#w2Edit").hide();
                $("#w2View").hide();
                $("#w2Print").hide();
            }
            else if (id != "-1" && id != null)
            {
                if (w2substatus)
                {
                     $("#w2Add").hide();
                     $("#w2Edit").hide();
                     $("#w2View").show();
                     $("#w2Print").show();
                     return;
                }
                 $("#w2Add").hide();
                 $("#w2Edit").show();
                 $("#w2View").show();
                 $("#w2Print").show();
            }
            else {
                $("#w2Add").hide();
                 $("#w2Edit").hide();
                 $("#w2View").hide();
                 $("#w2Print").hide();
            }

        }
        else if (form == 'w1')
        {
            if (si == null)
            {
                 $("#w1Edit").hide();
                 $("#w1View").hide();
                 $("#w1Print").hide();
                 return;
            }
            var id = GetFormIDByName("w1");
            var w1status = GetFormIDByName("w1Status");
            if (id != "-1" && id != null)
            {
                if (w1status == "Verified" )
                {
                    $("#w1Edit").hide();
                    $("#w1View").show();
                    $("#w1Print").show();
                    return;
                }
            }
            $("#w1Edit").show();
            $("#w1View").show();
            $("#w1Print").show();
        }
    }

