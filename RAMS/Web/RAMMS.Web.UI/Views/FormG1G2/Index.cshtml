<script type="text/javascript">
    $(document).ready(function () {
        $("#formG1G2RMU").chosen();
        $('#formG1G2SectionCode').chosen();
        $("#formG1G2AdvSearch").hide();

        $("#formG1G2RMU").on("change", function () {
            var val = $(this).find(":selected").text();
            val = val.split("-").length > 0 ? val.split("-")[1] : val;
            $("#txtRmuName").val(val);
            var req = {};
            req.Section = '';
            req.RoadCode = '';
            req.RMU = $("#formG1G2RMU option:selected").text().split("-")[1];
            $.ajax({
                url: '/MAM/RMUSecRoad',
                dataType: 'JSON',
                data: req,
                type: 'Post',
                success: function (data) {
                    if (data != null) {
                        $("#formG1G2SectionCode").empty();
                        $("#formG1G2SectionCode").append($("<option></option>").val("").html("Select Section Code"));
                        $.each(data.section, function (index, v) {
                            $("#formG1G2SectionCode").append($("<option></option>").val(v.value).html(v.text));
                        });
                        $("#formG1G2SectionCode").trigger("change");
                        $('#formG1G2SectionCode').trigger("chosen:updated");

                    } else {

                    }
                },
                error: function (data) {

                    console.error(data);
                }
            });
        });


        $("#formG1G2SectionCode").on("change", function () {
            var ddldata = $(this).val();
            var secCode = $("#formG1G2SectionCode option:selected").text().split("-")[0];
            if (ddldata != "") {
                $("#formG1G2SectionName").val(ddldata);
                //GetAllRoadCodeDataBySectionCode
                $.ajax({
                    url: '/FormQa1/GetRoadCodeBySection',
                    dataType: 'JSON',
                    data: { secCode },
                    type: 'Post',
                    success: function (data) {
                        if (data != null) {
                            $("#formG1G2RoadCode").empty();
                            $("#formG1G2RoadCode").append($("<option></option>").val("").html("Select Road Code"));
                            $.each(data, function (index, v) {
                                var text = v.roadCode + " - " + v.roadName;
                                $("#formG1G2RoadCode").append($("<option></option>").val(v.roadCode).html(text).attr("Item1", v.roadName));
                            });
                            $("#formG1G2RoadCode").trigger("change");
                            $('#formG1G2RoadCode').trigger("chosen:updated");

                        } else {

                        }
                    },
                    error: function (data) {

                        console.error(data);
                    }
                });
            }
            else {
                $("#txtSectionName").val("");
            }
            return false;
        });

        $("#formG1G2SectionCode").on("change", function () {
            var ddldata = $(this).val();
            if (ddldata != "") {
                $("#txtSectionName").val(ddldata);
            }
            else {
                $("#txtSectionName").val("");
            }
            return false;
        });

        $("#formG1G2RoadCode").on("change", function () {
            var val = $(this).find(":selected").attr("Item1");
            $("#txtRoadName").val(val);
        });

         $("#formG1G2ActivityCode").on("change", function () {
            var val = $(this).find(":selected").text();
            val = val.split("-").length > 0 ? val.split("-")[1] : val;
            $("#formG1G2ActivityName").val(val);
        });
    });

    function clearHeaderSearch() {
